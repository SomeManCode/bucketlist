<!-- partial with the comment text field and submit button -->
<div class="new-comments">
<!-- when you create a comment it takes the ID of item and and passes the value to the column todo_item_id that way comments know which item it belongs to  -->
    <%= form_for Comment.new(:todo_item_id => item.id), :remote => :true do |f| %>
        
        <%= f.hidden_field :todo_item_id %>

            <div class="field">
                <%= f.text_area :body %>
            </div>

            <div class="field">
                <%= f.submit %>
            </div>

    <% end %>
</div>

