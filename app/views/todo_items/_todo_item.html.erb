



<!-- lists each to do item -->
<div class="todo-item <%= todo_item.completed? ? 'completed' : ''%>">
    <%= todo_item.name %>
</div>

<!-- renders comments using partial  -->
:
<!-- this is the div that is appended to by ajax -->
<div class ="comments">
    <% todo_item.comments.each do |comment| %>
        <%= render comment %>
    <% end %>
</div>

<!-- renders the comments form -->
<%= render :partial => 'comments/form', :locals => {:item => todo_item} %>


<!-- like image -->
<%= link_to image_tag('like.png', :width => 16, :height => 16), like_todo_item_path(todo_item.id), :remote => true, :method => :post %>

<!-- displays the time at which the item was -->
<div class="info">
    Posted <%= distance_of_time_in_words(Time.now, todo_item.created_at) %> ago
</div>


